

#include <iostream>
using namespace std;

int main()
{
    int a,sum=0,avreg;
    
    cout<<"enter number :";
    cin>>a;
    
    for(int i=1; i<=a; i++)
    {
    sum=sum+i;
    }
        cout<<"sum number :"<<sum<<endl;
    
    avreg=sum/a;
    
    {
        cout<<"avreg number :"<<avreg;
    }
    
    return 0;
}
